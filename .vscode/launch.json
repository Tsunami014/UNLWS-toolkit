    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            }
        },
        {
            "name": "Main",
            "type": "debugpy",
            "request": "launch",
            "program": "__main__.py",
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}